rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Basic security: Only authenticated users (Admins) can read/write
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Employee-specific rules (future granularity)
    match /employees/{employeeId} {
      allow read, write: if request.auth != null;
    }
    
    // Attendance-specific rules with lock check
    match /attendance/{recordId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (resource == null || resource.data.isLocked == false);
    }
  }
}
